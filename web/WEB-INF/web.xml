<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Configure Servlet-->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.web.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/adminServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>com.web.CommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/commentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticleServlet</servlet-name>
        <servlet-class>com.web.ArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticleServlet</servlet-name>
        <url-pattern>/articleServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TagServlet</servlet-name>
        <servlet-class>com.web.TagServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TagServlet</servlet-name>
        <url-pattern>/tagServlet</url-pattern>
    </servlet-mapping>


</web-app>